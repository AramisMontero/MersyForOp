@model IEnumerable<Domain.MED.Admision>

<div class="scroller">
    <table id="MyTable" class="table table-striped table-bordered dt-responsive nowrap">
        <thead>
            <tr>
                <th>Area</th>
                <th></th>
                <th>Hora de Ingreso</th>
                <th>Estado</th>
                <th></th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Place.Area.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Place.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.Name)
                    </td>

                    <td>
                        <a class="btn btn-warning" href="@Url.Action("Edit", "Admisions", new {area = "Medicals", id = @item.AdmisionId})"> <span class="fa fa-pencil-square-o"></span> Editar</a>
                        <a class="btn btn-info" href="@Url.Action("Details", "Admisions", new {area = "Medicals", id = @item.AdmisionId})"> <span class="fa fa-info"></span> Detalles de: Camas, Habitaciones y Espacios </a>
                    </td>


                   
                </tr>
            }
        </tbody>
    </table>
</div>